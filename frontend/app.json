{
  "expo": {
    "name": "my-app",
    "slug": "my-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.myapp.velocall",
      "supportsTablet": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "We need the camera to show your video during meetings.",
        "NSMicrophoneUsageDescription": "We need the microphone so others can hear you during meetings.",
        "NSPhotoLibraryAddUsageDescription": "Needed to attach photos in chat (optional)."
      }
    },
    "android": {
      "package": "com.myapp.velocall",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "INTERNET",
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https"
            },
            {
              "scheme": "http"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ],
          "autoVerify": false
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-font",
      "expo-dev-client",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33,
            "buildToolsVersion": "33.0.0",
            "minSdkVersion": 21
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "backendUrl": "http://192.168.0.128:3000",
      "signalingUrl": "ws://10.0.2.2:5000/ws",
      "firebase": {
        "apiKey": "YOUR_FIREBASE_API_KEY",
        "authDomain": "YOUR_FIREBASE_PROJECT.firebaseapp.com",
        "projectId": "YOUR_FIREBASE_PROJECT_ID",
        "storageBucket": "YOUR_FIREBASE_PROJECT.appspot.com",
        "messagingSenderId": "YOUR_MSG_SENDER_ID",
        "appId": "YOUR_FIREBASE_APP_ID"
      },
      "oauth": {
        "expoGoogleClientId": "YOUR_GOOGLE_EXPO_CLIENT_ID",
        "iosGoogleClientId": "YOUR_GOOGLE_IOS_CLIENT_ID",
        "androidGoogleClientId": "YOUR_GOOGLE_ANDROID_CLIENT_ID",
        "webGoogleClientId": "YOUR_GOOGLE_WEB_CLIENT_ID",
        "githubClientId": "YOUR_GITHUB_CLIENT_ID"
      },
      "appScheme": "myapp"
    }
  }
}
